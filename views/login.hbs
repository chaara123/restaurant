<div id="login">
    <h2>Zaloguj sie</h2>
    <form action="/login/login-user" method="POST" autocomplete="off">
        <label>
            <input placeholder="E-mail" type="text" name="mail">
        </label>
        <label>
            <input placeholder="Hasło" type="password" name="password">
        </label>
        <label>
            <input type="submit" value="Zaloguj">
        </label>

        <label>
            <a href="/registration">Utwórz Konto</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/reset-password">Zapomniałem hasła</a>
        </label>
        {{#if error}}
        <div class="error">{{error}}</div>
        {{/if}}
        {{#if accountCreated}}
        <div class="message">{{accountCreated}}</div>
        {{/if}}
    </form>
</div>